{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "http://our.company.com/companyFilter.schema.json",
  "type": "object",
  "properties": {
    "filters": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "minLength": 2
        },
        "minEmployees": {
          "type": "integer",
          "minimum": 0
        },
        "maxEmployees": {
          "type": "integer",
          "minimum": 1
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}